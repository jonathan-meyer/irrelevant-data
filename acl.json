[
  {
    "group": "guest",
    "permissions": [
      {
        "resource": "lighthouses",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "*",
        "methods": "*",
        "action": "deny"
      }
    ]
  },
  {
    "group": "user",
    "permissions": [
      {
        "resource": "lighthouses/*",
        "methods": ["DELETE"],
        "action": "deny"
      },
      {
        "resource": "*",
        "methods": "*",
        "action": "allow"
      }
    ]
  },
  {
    "group": "admin",
    "permissions": [
      {
        "resource": "*",
        "methods": "*",
        "action": "allow"
      }
    ]
  }
]
